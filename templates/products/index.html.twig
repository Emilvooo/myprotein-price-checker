{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.14.2/dist/bootstrap-table.min.css">
{% endblock %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-info" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-10">
            <h3><a href="/" class="text-dark">Products</a></h3>
        </div>
        <div class="col-2">
            <a class="btn btn-dark float-right" href="{{ path('scrapable_product_add') }}" role="button">Add scrapable product</a>
        </div>
    </div>
    <div class="row mt-3">
        {% for product in products %}
        <div class="col-sm-4 d-flex align-items-stretch mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><a href="{{ path('products_item', {slug: product.slug}) }}" class="text-dark">{{ product.name }}</a> </h5>
                    <p class="card-text">{{ product.description|raw }}</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}