{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.14.2/dist/bootstrap-table.min.css">
    <style>
    </style>
{% endblock %}

{% block body %}
    {% for label, messages in app.session.flashbag.all %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <div class="row">
        <div class="col-10">
            <h3><a href="/" class="text-dark">Products</a></h3>
        </div>
        <div class="col-2">
            <a class="btn btn-dark float-right" href="{{ path('products_add') }}" role="button"><i class="fas fa-plus"></i></a>
        </div>
    </div>
    <div class="row mt-3">
        {% for product in products %}
            <div class="col-lg-4 col-md-6 d-flex align-items-stretch mb-3">
                <div class="card border-0 rounded-0">
                    <div class="card-body">
                        <a href="{{ path('products_variation_index', {slug: product.slug}) }}" class="text-dark"><h5 class="card-title">{{ product.name }}</h5></a>
                        <p class="card-text">{{ product.description|slice(0, 300)|raw }}</p>
                    </div>
                    <div class="card-footer text-muted bg-dark rounded-0 p-1">
                        <a href="{{ path('products_variation_index', {slug: product.slug}) }}" class="btn btn-sm btn-dark center">
                            <strong>See more</strong>
                        </a>
                        <div class="float-right">
                            <span class="badge badge-dark">amount: {{ product.variations|length }}</span>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}