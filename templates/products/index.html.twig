{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.14.2/dist/bootstrap-table.min.css">
    <style>
    </style>
{% endblock %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-info" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-10">
            <h3><a href="/" class="text-dark">Products</a></h3>
        </div>
        <div class="col-2">
            <a class="btn btn-dark float-right" href="{{ path('products_add') }}" role="button">Add scrapable product</a>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <div class="list-group">
                {% for product in products %}
                    <a href="{{ path('products_variation_index', {slug: product.slug}) }}" class="list-group-item list-group-item-action text-dark border-0 bg-white mb-3">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">{{ product.name }}</h5>
                            <small class="text-muted">variations: {{ product.variations|length }}</small>
                        </div>
                        <p class="mb-3">{{ product.description|slice(0, 510)|raw }}</p>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}